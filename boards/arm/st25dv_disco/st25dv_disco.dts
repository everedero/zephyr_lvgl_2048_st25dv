/dts-v1/;
#include "st/f4/stm32f405Xg.dtsi"
#include "st/f4/stm32f405vgtx-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "ST ST25DV Discovery Kit";
	compatible = "st,stm32f405", "st,stm32f4";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,display = &ili9341;
	};

	leds {
		compatible = "gpio-leds";
		orange_led: led_1 {
			gpios = <&gpioe 5 GPIO_ACTIVE_HIGH>;
			label = "Orange LD1";
		};
		yellow_led: led_2 {
			gpios = <&gpioc 4 GPIO_ACTIVE_HIGH>;
			label = "Yellow LD2";
		};
		displ_reset: rst_1 {
			gpios = <&gpiod 15 GPIO_ACTIVE_LOW>;
			label = "Display nRST";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		blue_button: button_1 {
			label = "Home";
			gpios = <&gpioe 6 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_0>;
		};
		sel_button: button_2 {
			label = "Sel";
			gpios = <&gpioe 8 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_1>;
		};
		left_button: button_3 {
			label = "Left";
			gpios = <&gpioe 9 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_2>;
		};
		right_button: button_4 {
			label = "Right";
			gpios = <&gpioe 10 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_3>;
		};
		up_button: button_5 {
			label = "Up";
			gpios = <&gpioe 11 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_4>;
		};
		down_button: button_6 {
			label = "Down";
			gpios = <&gpioe 12 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_5>;
		};
	};

	aliases {
		led0 = &orange_led;
		sw0 = &blue_button;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
// TODO check clock conf
	div-m = <25>;
	mul-n = <432>;
	div-p = <2>;
	div-q = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(216)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <4>;
	apb2-prescaler = <2>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pb6 &usart1_rx_pb7>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&adc1 {
	pinctrl-0 = <&adc1_in6_pa6>;
	pinctrl-names = "default";
        st,adc-prescaler = <4>;
};


&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";
};

&spi2 {
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&spi2_mosi_pc3 &spi2_miso_pc2 &spi2_sck_pb13>;
	cs-gpios = <&gpiob 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	pinctrl-names = "default";
	status = "okay";

	ili9341: ili9341@0 {
		compatible = "ilitek,ili9341";
		spi-max-frequency = <6000000>; /* Max 50 Mbit/s */
		reg = <0>;
		cmd-data-gpios = <&gpioe 3 GPIO_ACTIVE_LOW>;
		reset-gpios = <&gpiod 15 GPIO_ACTIVE_LOW>;
		pixel-format = <0>;//RGB666
		rotation = <0>;
		width = <240>;
		height = <320>;
                //duplex = <0x800>; //SPI_HALF_DUPLEX;
	};
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	stmpe811: stmpe811@41 {
		compatible = "st,stmpe811";
		status = "okay";
		reg = <0x41>;
		int-gpios = <&gpioe 0 GPIO_ACTIVE_LOW>;
		screen-width = <240>;
		screen-height = <320>;
		raw-x-min = <240>;
		raw-y-min = <200>;
		raw-x-max = <3680>;
		raw-y-max = <3800>;
		panel-driver-settling-time-us = <1000>;
		touch-detect-delay-us = <5000>;
		touch-average-control = <8>;
		tracking-index = <127>;
	};
};

zephyr_udc0: &usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_id_pa10 &usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
        // Adding PLL fixes the "clock domain not found" issue
        //clocks = <&rcc STM32_CLOCK_BUS_AHB1 0x20000000>,
        //         <&rcc STM32_SRC_PLL_Q CK48M_SEL(0)>;
	status = "okay";
};
